<div class="col-md-4 col-md-offset-4">
  <h2>新增討論版</h2>
  <hr>
  <%= form_with(model: @group) do |form| %>
    <div class="field">
      <%= form.label(:title, "討論版名稱") %>
      <%= form.text_field(:title, class: "form-control") %>
    </div>
    <div class="field">
      <%= form.label(:description, "討論版簡介") %>
      <%= form.text_area(:description, class: "form-control") %>
    </div>
    <div class="actions">
      <%= form.submit("新增討論版", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>