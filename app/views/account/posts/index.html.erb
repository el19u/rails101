<div class="col-md-12">
  <h2 class="text-center">我發表過的文章</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Group Name</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at %></td>
          <td><%= post_status_message(post.status) %></td>
          <% if post.status == "published" %>
            <td><%= link_to("編輯", edit_group_post_path(post.group_id, post)) %></td>
            <td><%= button_to("刪除", manage_group_post_path(post.group.id, post, post: {status: delete_by(current_user, post)}), data: { confirm: "確定要刪除嗎？"})%></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
