<div class="col-md-12">
  <h2 class="text-center">我發表過的文章</h2>
  <table class="table">
    <thead>
      <tr>
        <th>Content</th>
        <th>Group Name</th>
        <th>Last Update</th>
        <th colspan="2"></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.content %></td>
          <td><%= post.group.title %></td>
          <td><%= post.updated_at %></td>
          <td><%= post_status_message(post.status) %></td>
          <td>
            <div style="display: flex;">
              <% if post.may_update_verify? %>
                <%= button_to("編輯", edit_account_post_path(post), method: :get) %>
              <% end %>
              <% if post.may_delete_by_post_author? %>
                <%= button_to("刪除", account_post_path(post, post: { status: "delete_by_post_author" }), method: :delete, data: { confirm: "確定要刪除嗎？" })%>
              <% end %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
