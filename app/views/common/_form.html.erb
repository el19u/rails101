<%= simple_form_for(group, submit: submit) do |form| %>
  <div class="form-group">
    <%= form.input(:title, label: "討論版名稱", error: "Ttile cannot be blank", input_html: {class: "form-control"}) %>
  </div>
  <div class="form-group">
    <%= form.input(:description,label: "討論版簡介", input_html: {class: "form-control"}) %>
  </div>
  <div class="actions">
    <%= form.submit(submit, class: "btn btn-primary", data: {disable_with: "Submitting..." }) %>
  </div>
<% end %>